{
    "version": "2.0.0",
    "isShellCommand": false,
    "tasks": [
        {
            "label": "run test",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test"
            ],
            "problemMatcher": {
                "owner": "javascript",
                "fileLocation": [
                    "absolute"
                ],
                "severity": "error",
                "pattern": [
                    {
                        "regexp": "Message.*"
                    },
                    {
                        "regexp": "[^ ](.*)",
                        "message": 1
                    },
                    {
                        "regexp": "Stack.*"
                    },
                    {
                        "regexp": "at +.*\\((.*\\\\*.ts):(\\d+):(\\d+)\\)",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    }
                ]
            }
        }
    ]
}